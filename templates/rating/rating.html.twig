{% extends 'base.html.twig' %}

{% block title %}
  Mes personnages notés
{% endblock %}

{% block body %}
  <div class="min-h-screen bg-gradient-to-b from-black via-gray-900 to-black text-white py-12 px-6">
    <div class="max-w-7xl mx-auto">
      <h1 class="relative z-10 text-5xl font-extrabold text-center text-yellow-400 mb-12 tracking-widest drop-shadow-lg">⚡ MES NOTES ⚡</h1>

      {% if ratings is empty %}
        <p class="text-center text-gray-300">Aucune note enregistrée.</p>
      {% else %}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
          {% for rating in ratings %}
            <div class="relative bg-gray-800 bg-opacity-90 p-4 rounded-2xl shadow-2xl overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-r from-red-600 via-yellow-400 to-red-600 blur-xl opacity-10 rounded-2xl"></div>

              <div class="relative z-10 flex flex-col items-center">
                <img src="{{ asset('images/' ~ rating.character.image) }}" alt="{{ rating.character.name }}" class="rounded-xl shadow-lg w-65 h-45 object-cover mb-4" />

                <h2 class="text-lg font-bold text-yellow-400 mb-2 text-center tracking-wide uppercase">{{ rating.character.name }}</h2>

                <p class="text-white text-sm mb-1">
                  Note : <span class="text-yellow-400 font-semibold">{{ rating.score }}/5</span>
                </p>
                <p class="text-gray-400 text-xs italic">Noté le {{ rating.createdAt|date('d/m/Y') }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
