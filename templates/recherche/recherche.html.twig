{% extends 'base.html.twig' %}

{% block title %}
  Recherche de Personnages
{% endblock %}

{% block body %}
  <div class="max-w-6xl mx-auto px-4 py-10 bg-gradient-to-b from-black via-gray-900 to-black text-white rounded-xl shadow-xl">
    <h1 class="text-5xl font-extrabold mb-10 text-center text-red-600 tracking-widest">RECHERCHE PERSONNAGES</h1>

    <!-- Barre de recherche -->
    <div class="mb-10">
      {{ form_start(form) }}
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <div class="w-full sm:w-2/3">{{ form_row(form.search, { attr: { class: 'w-full rounded-lg px-4 py-3 text-lg text-black shadow-md focus:outline-none focus:ring-2 focus:ring-red-600' }, label: false }) }}</div>
        <button type="submit" class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white text-lg rounded-lg shadow-md transition duration-300">üîç Rechercher</button>
      </div>
      {{ form_end(form) }}
    </div>

    {% if characters is not empty %}
      <h2 class="text-3xl font-semibold mb-6 text-teal-400 text-center">R√©sultats</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for character in characters %}
          <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition transform hover:-translate-y-1">
            <img src="{{ asset('images/' ~ character.image) }}" alt="{{ character.name }}" class="mx-auto w-72 h-48 object-cover rounded-lg mt-4" />
            <div class="p-5">
              <h3 class="text-xl text-yellow-400 font-bold mb-2">{{ character.name }}</h3>
              <p class="text-sm text-gray-300 mb-3">{{ character.description|u.truncate(120, '...') }}</p>
              <p class="text-xs text-gray-400 italic mb-2">
                Appara√Æt dans :{% for game in character.games %}
                  {{ loop.first ? '' : ', ' }}{{ game.title }}
                {% endfor %}
              </p>
              <p class="text-sm text-red-400 font-semibold">
                ‚≠ê Note moyenne :{% set avg = ratings[character.id] ?? '‚Äî' %}
                {{ avg ? (avg|number_format(1)) ~ '/5' : 'Pas encore not√©' }}
              </p>
              <a href="{{ path('character_show', { id: character.id }) }}" class="inline-block mt-4 text-red-500 hover:underline text-sm">Voir le personnage ‚Üí</a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-center text-gray-400 text-lg italic">Aucun personnage trouv√©.</p>
    {% endif %}
  </div>
{% endblock %}
