{% extends 'base.html.twig' %}

{% block title %}
  Top 10 des combattants
{% endblock %}

{% block body %}
  <div class="min-h-screen bg-gradient-to-b from-black via-gray-900 to-black text-white py-12 px-6">
    <div class="max-w-5xl mx-auto">
      <h1 class="text-4xl text-yellow-400 font-bold mb-8 text-center">ü•á Top 10 des combattants</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {% for row in topCharacters %}
          {% set character = row.character %}
          {% set avg = row.avgRating|number_format(1) %}
          <div class="bg-gray-800 p-6 rounded-xl border border-yellow-500 shadow-lg flex items-center gap-4">
            <img src="{{ asset('images/' ~ character.image) }}" alt="{{ character.name }}" class="w-65 h-45 object-cover rounded-lg border-2 border-yellow-400" />
            <div>
              <h2 class="text-xl font-bold text-yellow-300">{{ character.name }}</h2>
              <p class="text-yellow-200">Note moyenne : ‚≠ê {{ avg }}/5</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
